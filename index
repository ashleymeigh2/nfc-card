  <script>
    // === vCard download ===
    const displayName = "Ashley Meigh";
    const vcard = [
      "BEGIN:VCARD",
      "VERSION:3.0",
      "N:Meigh;Ashley;;;",
      "FN:" + displayName,
      // Add contact fields here if you want, e.g. EMAIL;TYPE=work:someone@example.com
      "URL;TYPE=work:https://mantidproject.github.io/mantidimaging/index.html",
      "URL;TYPE=github:https://github.com/mantidproject/mantidimaging",
      "URL;TYPE=linkedin:https://www.linkedin.com/in/ashley-meigh-137465204/",
      "END:VCARD"
    ].join("\n");

    document.getElementById("downloadVcf").addEventListener("click", () => {
      const blob = new Blob([vcard], { type: "text/vcard;charset=utf-8" });
      const a = document.createElement("a");
      a.href = URL.createObjectURL(blob);
      a.download = (displayName.replace(/\s+/g, "_") + ".vcf");
      document.body.appendChild(a); a.click(); a.remove();
      setStatus("Downloaded your vCard.");
    });

    // === Web NFC write (Chrome on Android, secure context) ===
    async function writeToNFC() {
      if (!('NDEFReader' in window)) {
        setStatus("Web NFC not supported on this device/browser. Use an NFC writer app instead.");
        return;
      }
      try {
        const ndef = new NDEFReader();
        // Using the current page URL by default. If hosted under a custom canonical URL, it will write that.
        const urlToWrite = document.querySelector('link[rel="canonical"]')?.href || location.href;
        await ndef.write({ records: [{ recordType: "url", data: urlToWrite }] });
        setStatus("Success! URL written to your NFC tag.");
      } catch (err) {
        if (err.name === 'NotAllowedError') setStatus("NFC permission denied. Try tapping again and grant access.");
        else if (err.name === 'NotSupportedError') setStatus("This tag/browser combo isn't supported.");
        else setStatus("Couldn't write to NFC: " + err.message);
      }
    }

    document.getElementById("writeNfc").addEventListener("click", writeToNFC);

    // Copy URL
    document.getElementById("copyUrl").addEventListener("click", async () => {
      try { await navigator.clipboard.writeText(location.href); setStatus("Page URL copied to clipboard."); }
      catch { setStatus("Couldn't copy. Long-press the address bar instead."); }
    });

    function setStatus(msg){
      const el = document.getElementById('status');
      el.textContent = msg; el.classList.remove('hidden');
    }
  </script>

